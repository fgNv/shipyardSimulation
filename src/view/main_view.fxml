<?import javafx.scene.layout.GridPane?>
<?import view.components.*?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="view.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Total de chapas de aço entregues" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label fx:id="label_steelSheetsDelivered" text="" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Label text="Chapas de aço aguardando transporte" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label fx:id="label_steelSheetsWaitingTransport" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <IdleTransportWorkerComponent GridPane.columnIndex="0" GridPane.rowIndex="2">
    </IdleTransportWorkerComponent>

    <IdleCutSectorAncillaryComponent GridPane.columnIndex="1" GridPane.rowIndex="2">
    </IdleCutSectorAncillaryComponent>

    <Label text="Chapas de aço na fila da máquina de corte CNC" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Label fx:id="label_steelSheetsInCNCQueue" text="" GridPane.columnIndex="3" GridPane.rowIndex="3" />

    <IdleCNCCutMachineComponent GridPane.columnIndex="4" GridPane.rowIndex="2">
    </IdleCNCCutMachineComponent>

    <IdleCNCOperatorComponent GridPane.columnIndex="5" GridPane.rowIndex="2">
    </IdleCNCOperatorComponent>

    <IdleFitterComponent GridPane.columnIndex="0" GridPane.rowIndex="4">
    </IdleFitterComponent>

    <IdleWelderComponent GridPane.columnIndex="1" GridPane.rowIndex="4">
    </IdleWelderComponent>

</GridPane>